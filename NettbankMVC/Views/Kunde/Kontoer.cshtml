@model IEnumerable<NettbankMVC.Models.Konto>

@{
    ViewBag.Title = "Kontoer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kontoer</h2>

<p>
    @Html.ActionLink("Opprett ny konto", "Create") |
    @Html.ActionLink("Overføre til konto", "NotFound")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kontoid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kontonavn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.saldo)
        </th>
        <th>Hva ønsker du å gjøre?</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.kontoid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kontonavn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.saldo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.kontoid }) |
                @Html.ActionLink("Details", "Details", new { id = item.kontoid }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.kontoid })
            </td>
        </tr>
    }

</table>
