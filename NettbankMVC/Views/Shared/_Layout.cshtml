<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/jquery-3.1.1.min.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-inverse">
            <div class="pull-left" style="color:white;margin-top:-10px;margin-left:5px">
                <h1><a href="/" style="text-decoration:none;color:white">Nettbank</a></h1>
                <small>- Enkelt, trygt og raskt betaling på nett</small>
            </div>
            @if (Session["Verified"] == null) // Hvis en kunde er logget inn så skal inputbokser og logginn-knappen forsvinne
            {
                using (Html.BeginForm("", "Kunde", FormMethod.Post))
                {
                <div class="form-inline pull-right" style="margin-right:5px">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Personnummer" name="personnummer" />
                    </div>
                    <div class="form-group">

                        <input type="password" class="form-control" placeholder="Passord" name="passord" />
                    </div>
                    <input type="submit" value="Logg inn" class="btn btn-primary navbar-btn"/>
                </div>
                }



                        <br /><br /><br />
                        <div class="pull-right" style="margin-right:5px">
                            <p style="color:white">Ikke kunde enda? @Html.ActionLink("Registrer her", "Registrer", "Kunde")</p>
                        </div>
            }
            else
            {
                <div class="pull-right" style="margin-right:5px">
                <input type="button" value="Logg ut" onclick="location.href='/'" class="btn btn-danger navbar-btn"/>
                </div>
            }

        </nav> <!--End of navbar-->

        @RenderBody()

        <div class="panel panel-default">
            <div class="panel-footer">Copyright &copy; 2016 - Nettbank
            <a class="pull-right" href=@Url.Action("Index", "Administrator")>Administrator</a></div>
        </div>
    </div> <!--End of container-->
</body>
</html>
